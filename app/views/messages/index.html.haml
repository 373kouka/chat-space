%html
  %body
    .flash-box
    .wrapper
      .chat-side
        .side-header
          %p.side-header__user-name 
            = current_user.name
          %ul.user-menu
            %li.user-menu__edit-user
              = link_to new_group_path do
                %i.fa.fa-edit
            %li.user-menu__new-group
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
        .groups
          = link_to '#' do
            .grooup
              %p.group__group-name  おはよう
              %p.group__latest-message まだメッセージがありません
      .chat-main
        .main-header
          .current-group
            %h2.current-group__name さよなら
            %ul.member-list
              Member:
              %li.member-list__member kouka
          = link_to edit_group_path(@group) do
            .main-header__edit-btn Edit
        .messages
          = render @messages
        .form
          = form_for [@group, @message] do |f|
            .input-box
              = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
              %label{class: "image-label__input", for: "message_image"}
                %i.fa.fa-image
                = f.file_field :image, class: 'image-label__file', id: "message_image"
            = f.submit 'Send', class: 'submit-btn'

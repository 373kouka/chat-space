%html
  %body
    .flash-box
    .wrapper
      = render 'shared/side_bar'
      
      .chat-main
        .main-header
          .current-group
            %h2.current-group__name
              = @group.name
            %ul.member-list
              Member:
              %li.member-list__member kouka
          = link_to edit_group_path(@group) do
            .main-header__edit-btn Edit
        .messages
          = render @messages
        .form
          = form_for [@group, @message] do |f|
            .input-box
              = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
              %label{class: "image-label__input", for: "message_image"}
                %i.fa.fa-image
                = f.file_field :image, class: 'image-label__file', id: "message_image"
            = f.submit 'Send', class: 'submit-btn'
